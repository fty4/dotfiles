#!/usr/bin/env bash

# navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

alias ll="ls -la"
alias cdtmp="cd $(mktemp -d)"
alias cdtemp="cd $(mktemp -d)"

alias finder="open ."

alias {{ .github.user }}="cd ~/github.com/{{ .github.user }}"
alias tm="cd ~/github.com/taskmedia"

alias mb="cd ~/git.daimler.com"
alias sre="cd ~/git.daimler.com/sre"
alias sree="cd ~/git.daimler.com/sre-enable"

# applications
{{- if lookPath "docker" }}
alias d=docker
{{- end }}
{{- if lookPath "docker-compose" }}
alias dc=docker-compose
{{- end }}
alias h="helm"
alias k="kubectl"
alias kg="kubectl get"
alias kgd="kubectl get deployment"
alias kgp="kubectl get pod"
alias kgs="kubectl get service"
alias kctx="kubectx"
alias kns="kubens"
{{- if lookPath "podman" }}
alias p="podman"
{{- end }}

# git
alias g="git"
alias ga="g add"
alias gap="g add -p"
alias gap.="g add -p ."
alias gc="g commit"
alias gcmsg="g commit -m"
alias gcundo="g reset --soft HEAD~1" # Undoing latest commit
alias gco="g checkout"
alias gcob="g checkout -b"
alias gcp='g cherry-pick'
alias gd="g diff"
alias gdc="g diff --cached"
alias gds="g diff --staged"
alias gl="g log --all --decorate --oneline --graph"
alias gpull="g pull"
alias gpush="g push"
alias gpushf="g push --force"
alias gr="g restore"
alias grs="g restore --staged"
alias grs.="g restore --staged ."
alias grb="g rebase"
alias grbi="g rebase -i"
alias grbm="g rebase $(git_main_branch)"
alias grbom="g rebase origin/$(git_main_branch)"
alias gs="g status"
alias gts="g tag -s"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Enable aliases to be sudo’ed
alias sudo='sudo '
